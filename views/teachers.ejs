<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Teachers</title>
  </head>
  <body>
    <h1>Teachers Data</h1>
    <table border="1">
      <thead>
        <tr>
          <th>ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Subject</th>
          <th>OPTION</th>
        </tr>
      </thead>
      <tbody>
        <%dataTeachers.forEach(z=> { %>
          <tr>
            <td><%= z.id %></td>
            <td><%= z.first_name %></td>
            <td><%= z.last_name %></td>
            <td><%= z.email %></td>
            <td><%= z.Subject != undefined ? z.Subject.subject_name : 'unassign' %></td>
            <td><a href="/teachers/edit/<%=z.id%>">Edit</a> | <a href="/teachers/delete/<%=z.id%>"onclick="deleteItem(<%= z.id %>)">Delete</a> </td>
            <!-- <td><a href="/address/edit/<%=z.id%>">Edit</a></td>
            <td><a href="/address/delete/<%=z.id%>">Delete</a></td> -->
          </tr>
        <% })%>
      </tbody>
    </table>
    <br>
    <a href="/teachers/addteachers">Add</a>
    <br>

    <script type="text/javascript">
      function deleteItem(id) {
        if (window.confirm('Delete this data?')){
          document.location.href = `teachers/delete/${id}`
        }
        return false;
      }
    </script>

    <br><br>
    <a href="/">Home</a>
  </body>
</html>
